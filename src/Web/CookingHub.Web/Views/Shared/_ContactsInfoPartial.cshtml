@using CookingHub.Common
<div class="contact-imfo-box">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <i class="fas fa-phone-volume"></i>
                <div class="overflow-hidden">
                    <h4>Phone</h4>
                    <p class="lead">
                        +01 123-456-4590
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <i class="fa fa-envelope"></i>
                <div class="overflow-hidden">
                    <h4>Email</h4>
                    <p class="lead">
                        @GlobalConstants.AdministratorEmail
                    </p>
                </div>
            </div>
            <div class="col-md-4">
                <a class="ml-4 btn btn-light" asp-area="" asp-controller="Contacts" asp-action="Index">Contact Form</a>
            </div>
        </div>
    </div>
</div>